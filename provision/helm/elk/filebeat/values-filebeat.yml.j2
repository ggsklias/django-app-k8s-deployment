filebeatConfig:
  filebeat.yml: |

    # ———————————————————————————————
    #  1) GLOBAL LOGGING
    # ———————————————————————————————
    logging.level: debug            # ← turn on DEBUG-level logging
    logging.selectors: ["*"]        # ← (optional) capture all components

    # ———————————————————————————————
    #  2) INPUTS
    # ———————————————————————————————
    filebeat.inputs:
      - type: container
        paths:
          - /var/log/containers/*.log
        processors:
          # ONLY decode JSON from non-filebeat containers:
          - add_kubernetes_metadata:
              host: ${NODE_NAME}
              in_cluster: true
              matchers:
                - logs_path:
                    logs_path: "/var/log/containers/"

          # 2) Immediately drop Filebeat’s own logs
          {# - drop_event:
              when:
                equals:
                  kubernetes.container.name: "filebeat" #}

          # 3) Decode JSON in everyone else’s logs
          - decode_json_fields:
              fields: ["message"]
              process_array: false
              max_depth: 1
              target: ""
              overwrite_keys: true

      - type: journald
        enabled: true
        include_matchers:
          - _SYSTEMD_UNIT=kubelet.service
          - _SYSTEMD_UNIT=kube-apiserver.service
        processors:
          - add_host_metadata: ~
          - add_cloud_metadata: ~

    # ———————————————————————————————
    #  3) MODULES
    # ———————————————————————————————
    filebeat.modules:
      - module: system
        syslog:
          enabled: true
        auth:
          enabled: true

    # ———————————————————————————————
    #  4) OUTPUT
    # ———————————————————————————————
    output.elasticsearch:
      hosts: ["https://elasticsearch-master.logging.svc.cluster.local:9200"]
      username: "elastic"
      password: "{{ elastic_password }}"
      ssl.verification_mode: "none"
