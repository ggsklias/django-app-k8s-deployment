filebeatConfig:
  filebeat.yml: |
    filebeat.inputs:
      - type: container
        paths:
          - /var/log/containers/*.log
        processors:
          - decode_json_fields:
              fields: ["message"]
              process_array: false
              max_depth: 1
              target: ""
              overwrite_keys: true
          - add_kubernetes_metadata:
              host: ${NODE_NAME}          # auto-injected by the chart into each pod
              in_cluster: true             # talk to the k8s API from inside the cluster
              matchers:
                - logs_path:
                    logs_path: "/var/log/containers/"
      - type: journald
        enabled: true
        # only grab lines coming from these units
        include_matchers:
          - _SYSTEMD_UNIT=kubelet.service
          - _SYSTEMD_UNIT=kube-apiserver.service   # if you have one
        processors:
          - add_host_metadata: ~
          - add_cloud_metadata: ~
    filebeat.modules:
      - module: system
        # syslog (e.g. /var/log/syslog or /var/log/messages)
        syslog:
          enabled: true
        # auth (e.g. /var/log/auth.log or /var/log/secure)
        # change paths below if your distro puts these elsewhere
        auth:
          enabled: true
    output.elasticsearch:
      hosts: ["https://elasticsearch-master.logging.svc.cluster.local:9200"]
      username: "elastic"
      password: "{{ elastic_password }}"
      ssl.verification_mode: "none"
    # Or send logs through Logstash:
    # output.logstash:
    #   hosts: ["logstash.logging.svc.cluster.local:5044"]
